<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link href="/stylesheets/login.css" rel="stylesheet">
        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous" defer></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
        <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
        <script src="/javascripts/components/header.js"></script>
        <script src="/javascripts/login.js" defer></script>
        <script src="/javascripts/icon.js" defer></script>

        <link rel="icon" href="/images/logo-light.svg" type="image/svg+xml">
        <title>ShowPass</title>
    </head>
    <body class="d-flex flex-column min-vh-100">
        <!-- Barra de navegação -->
        <header id="header">
            <%- include('components/header') %>
        </header>

        <!-- Conteúdo da página -->
        <div class="content flex-grow-1" id="content">
            <form action="entrar" method="POST" class="form-input row g-1 needs-validation" novalidate>
                <!-- Usuário/Email -->
                <div class="mb-3">
                    <label for="email" class="form-label text-start d-block">Usuário/Email</label>
                    <input type="text" class="form-control <%= error?.email ? 'is-invalid' : '' %>" id="email" name="email" value="<%= user?.email || '' %>" placeholder="Digite seu usuário ou email" required>
                    <div class="invalid-feedback"><%= error?.email || '' %><!-- A mensagem de erro será alterada dinamicamente aqui --></div>
                </div>

                <!-- Senha -->
                <div class="mb-3">
                    <label for="password" class="form-label text-start d-block">Senha</label>
                    <div class="password-container">
                        <input type="password" class="form-control <%= error?.password ? 'is-invalid' : '' %>" id="password" name="password" value="<%= user?.password || '' %>" placeholder="********" required>
                        <div class="invalid-feedback"><%= error?.password || '' %><!-- A mensagem de erro será alterada dinamicamente aqui --></div>
                        <button type="button" id="toggle-password" class="btn btn-secondary">
                            <ion-icon name="eye-off"></ion-icon>
                        </button>
                    </div>
                    <div class="text-end mt-1">
                        <a href="" class="small text-decoration-none" id="password-forgotten">Esqueceu sua senha?</a>
                    </div>
                </div>

                <!-- Botão Enviar -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
            </form>
        </div>
        
        <!-- Rodapé  -->
        <footer id="footer">
            <%- include('components/footer') %>
        </footer>
    </body>
</html>